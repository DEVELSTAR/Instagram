<div class="form-upload">
  <%= form_for Status.new do |f| %>
    <div class="form-group">
      <%= f.text_field :body %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
    </div>
    <br>
    <div class="text-center">
      <%= f.submit 'Create Status', class: 'btn btn-primary' %>
    </div>
<% end %>
</div>  